{
    "openapi": "3.0.0",
    "info": {
        "title": "Child Event Manager - Reporting API",
        "version": "1.0.0",
        "description": "API for generating reports in various formats (Excel, CSV, PDF)"
    },
    "paths": {
        "/generate-daily-report": {
            "post": {
                "summary": "Generate daily report",
                "description": "Generates a report for all events and bookings on a specific date",
                "operationId": "generateDailyReport",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "userId",
                                    "date",
                                    "format"
                                ],
                                "properties": {
                                    "userId": {
                                        "type": "string",
                                        "description": "The ID of the user requesting the report"
                                    },
                                    "date": {
                                        "type": "string",
                                        "description": "The date for the report in YYYY-MM-DD format"
                                    },
                                    "format": {
                                        "type": "string",
                                        "enum": [
                                            "excel",
                                            "csv",
                                            "pdf"
                                        ],
                                        "description": "Output format for the report"
                                    },
                                    "childId": {
                                        "type": "string",
                                        "description": "Optional: Filter by specific child ID"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Report generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "reportUrl": {
                                            "type": "string",
                                            "description": "URL to download the generated report"
                                        },
                                        "filename": {
                                            "type": "string"
                                        },
                                        "format": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/generate-weekly-report": {
            "post": {
                "summary": "Generate weekly report",
                "description": "Generates a report for all events and bookings in a specific week",
                "operationId": "generateWeeklyReport",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "userId",
                                    "startDate",
                                    "endDate",
                                    "format"
                                ],
                                "properties": {
                                    "userId": {
                                        "type": "string",
                                        "description": "The ID of the user requesting the report"
                                    },
                                    "startDate": {
                                        "type": "string",
                                        "description": "Start date for the week in YYYY-MM-DD format (typically Monday)"
                                    },
                                    "endDate": {
                                        "type": "string",
                                        "description": "End date for the week in YYYY-MM-DD format (typically Sunday)"
                                    },
                                    "format": {
                                        "type": "string",
                                        "enum": [
                                            "excel",
                                            "csv",
                                            "pdf"
                                        ],
                                        "description": "Output format for the report"
                                    },
                                    "childId": {
                                        "type": "string",
                                        "description": "Optional: Filter by specific child ID"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Report generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "reportUrl": {
                                            "type": "string"
                                        },
                                        "filename": {
                                            "type": "string"
                                        },
                                        "format": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/generate-monthly-report": {
            "post": {
                "summary": "Generate monthly report",
                "description": "Generates a comprehensive report for a full month with statistics and analysis",
                "operationId": "generateMonthlyReport",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "userId",
                                    "year",
                                    "month",
                                    "format"
                                ],
                                "properties": {
                                    "userId": {
                                        "type": "string",
                                        "description": "The ID of the user requesting the report"
                                    },
                                    "year": {
                                        "type": "integer",
                                        "description": "The year for the report"
                                    },
                                    "month": {
                                        "type": "integer",
                                        "minimum": 1,
                                        "maximum": 12,
                                        "description": "The month for the report (1-12)"
                                    },
                                    "format": {
                                        "type": "string",
                                        "enum": [
                                            "excel",
                                            "csv",
                                            "pdf"
                                        ],
                                        "description": "Output format for the report"
                                    },
                                    "childId": {
                                        "type": "string",
                                        "description": "Optional: Filter by specific child ID"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Report generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "reportUrl": {
                                            "type": "string"
                                        },
                                        "filename": {
                                            "type": "string"
                                        },
                                        "format": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/generate-custom-report": {
            "post": {
                "summary": "Generate custom date range report",
                "description": "Generates a report for any custom date range with flexible filtering",
                "operationId": "generateCustomReport",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "userId",
                                    "startDate",
                                    "endDate",
                                    "format"
                                ],
                                "properties": {
                                    "userId": {
                                        "type": "string",
                                        "description": "The ID of the user requesting the report"
                                    },
                                    "startDate": {
                                        "type": "string",
                                        "description": "Start date in YYYY-MM-DD format"
                                    },
                                    "endDate": {
                                        "type": "string",
                                        "description": "End date in YYYY-MM-DD format"
                                    },
                                    "format": {
                                        "type": "string",
                                        "enum": [
                                            "excel",
                                            "csv",
                                            "pdf"
                                        ],
                                        "description": "Output format for the report"
                                    },
                                    "childId": {
                                        "type": "string",
                                        "description": "Optional: Filter by specific child ID"
                                    },
                                    "eventType": {
                                        "type": "string",
                                        "description": "Optional: Filter by event type"
                                    },
                                    "category": {
                                        "type": "string",
                                        "enum": [
                                            "all",
                                            "events",
                                            "bookings",
                                            "children"
                                        ],
                                        "description": "Report category focus"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Report generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "reportUrl": {
                                            "type": "string"
                                        },
                                        "filename": {
                                            "type": "string"
                                        },
                                        "format": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/generate-children-report": {
            "post": {
                "summary": "Generate children activity report",
                "description": "Generates a report focused on children's activities, attendance, and participation",
                "operationId": "generateChildrenReport",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "userId",
                                    "format"
                                ],
                                "properties": {
                                    "userId": {
                                        "type": "string",
                                        "description": "The ID of the user requesting the report"
                                    },
                                    "childId": {
                                        "type": "string",
                                        "description": "Optional: Specific child ID, if not provided will report on all children"
                                    },
                                    "startDate": {
                                        "type": "string",
                                        "description": "Optional: Start date for the report range in YYYY-MM-DD format"
                                    },
                                    "endDate": {
                                        "type": "string",
                                        "description": "Optional: End date for the report range in YYYY-MM-DD format"
                                    },
                                    "format": {
                                        "type": "string",
                                        "enum": [
                                            "excel",
                                            "csv",
                                            "pdf"
                                        ],
                                        "description": "Output format for the report"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Report generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "reportUrl": {
                                            "type": "string"
                                        },
                                        "filename": {
                                            "type": "string"
                                        },
                                        "format": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/generate-event-report": {
            "post": {
                "summary": "Generate event analysis report",
                "description": "Generates a report analyzing events by type, capacity, attendance, and popularity",
                "operationId": "generateEventReport",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "userId",
                                    "format"
                                ],
                                "properties": {
                                    "userId": {
                                        "type": "string",
                                        "description": "The ID of the user requesting the report"
                                    },
                                    "eventType": {
                                        "type": "string",
                                        "description": "Optional: Filter by specific event type"
                                    },
                                    "startDate": {
                                        "type": "string",
                                        "description": "Optional: Start date for the report range in YYYY-MM-DD format"
                                    },
                                    "endDate": {
                                        "type": "string",
                                        "description": "Optional: End date for the report range in YYYY-MM-DD format"
                                    },
                                    "format": {
                                        "type": "string",
                                        "enum": [
                                            "excel",
                                            "csv",
                                            "pdf"
                                        ],
                                        "description": "Output format for the report"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Report generated successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "reportUrl": {
                                            "type": "string"
                                        },
                                        "filename": {
                                            "type": "string"
                                        },
                                        "format": {
                                            "type": "string"
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        },
        "/get-report-preview": {
            "post": {
                "summary": "Get report data preview",
                "description": "Get a preview of report data before generating the full report",
                "operationId": "getReportPreview",
                "requestBody": {
                    "required": true,
                    "content": {
                        "application/json": {
                            "schema": {
                                "type": "object",
                                "required": [
                                    "userId",
                                    "reportType"
                                ],
                                "properties": {
                                    "userId": {
                                        "type": "string",
                                        "description": "The ID of the user requesting the preview"
                                    },
                                    "reportType": {
                                        "type": "string",
                                        "enum": [
                                            "daily",
                                            "weekly",
                                            "monthly",
                                            "custom",
                                            "children",
                                            "event"
                                        ],
                                        "description": "Type of report to preview"
                                    },
                                    "startDate": {
                                        "type": "string",
                                        "description": "Start date for the report in YYYY-MM-DD format"
                                    },
                                    "endDate": {
                                        "type": "string",
                                        "description": "End date for the report in YYYY-MM-DD format"
                                    },
                                    "childId": {
                                        "type": "string",
                                        "description": "Optional: Filter by specific child ID"
                                    }
                                }
                            }
                        }
                    }
                },
                "responses": {
                    "200": {
                        "description": "Preview data retrieved successfully",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "type": "object",
                                    "properties": {
                                        "success": {
                                            "type": "boolean"
                                        },
                                        "summary": {
                                            "type": "object",
                                            "properties": {
                                                "totalEvents": {
                                                    "type": "integer"
                                                },
                                                "totalBookings": {
                                                    "type": "integer"
                                                },
                                                "totalChildren": {
                                                    "type": "integer"
                                                },
                                                "eventsByType": {
                                                    "type": "object"
                                                }
                                            }
                                        },
                                        "dateRange": {
                                            "type": "object",
                                            "properties": {
                                                "start": {
                                                    "type": "string"
                                                },
                                                "end": {
                                                    "type": "string"
                                                }
                                            }
                                        }
                                    }
                                }
                            }
                        }
                    }
                }
            }
        }
    }
}
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id            String         @id @default(cuid())
  name          String?
  email         String         @unique
  emailVerified DateTime?
  password      String?
  image         String?
  accounts      Account[]
  sessions      Session[]
  children      ChildDetails[]
  bookings      Booking[]
  meals         Meal[]
  mealPlans     MealPlan[]
  locationData  LocationData[]
  headcounts    Headcount[]
  createdAt     DateTime       @default(now())
  updatedAt     DateTime       @updatedAt
}

model Account {
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())
  updatedAt         DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@id([provider, providerAccountId])
}

model Session {
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model VerificationToken {
  identifier String
  token      String
  expires    DateTime

  @@id([identifier, token])
}

model ChildDetails {
  id          String           @id @default(cuid())
  firstName   String
  lastName    String?
  dateOfBirth DateTime
  gender      String?
  allergies   String?
  medicalInfo String?
  notes       String?
  signedIn    Boolean          @default(false)
  bookedIn    Boolean          @default(false)
  userId      String
  user        User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  events      ChildEvent[]
  bookings    Booking[]
  mealPlans   ChildMealPlan[]
  headcounts  HeadcountChild[]
  createdAt   DateTime         @default(now())
  updatedAt   DateTime         @updatedAt

  @@map("child-details")
}

model ChildEvent {
  id        String       @id @default(cuid())
  name      String
  eventType String
  childId   String
  child     ChildDetails @relation(fields: [childId], references: [id], onDelete: Cascade)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  @@map("child-events")
}

model Booking {
  id        String        @id @default(cuid())
  name      String
  date      DateTime
  time      String // Store time as string (e.g., "14:30") for flexibility
  notes     String?
  userId    String
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  childId   String?
  child     ChildDetails? @relation(fields: [childId], references: [id], onDelete: SetNull)
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt

  @@map("bookings")
}

model Meal {
  id              String          @id @default(cuid())
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name            String
  description     String?
  ingredients     String? // JSON array
  category        String // breakfast, lunch, dinner, snack
  isTemplate      Boolean         @default(false)
  allergyInfo     String? // JSON array
  prepTime        Int? // in minutes
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  mealPlanEntries MealPlanEntry[]

  @@map("meals")
}

model MealPlan {
  id         String          @id @default(cuid())
  userId     String
  user       User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  name       String
  startDate  DateTime // Monday of the week
  endDate    DateTime // Sunday of the week
  isActive   Boolean         @default(true)
  createdAt  DateTime        @default(now())
  updatedAt  DateTime        @updatedAt
  entries    MealPlanEntry[]
  childPlans ChildMealPlan[]

  @@map("meal-plans")
}

model MealPlanEntry {
  id         String   @id @default(cuid())
  mealPlanId String
  mealPlan   MealPlan @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  mealId     String
  meal       Meal     @relation(fields: [mealId], references: [id], onDelete: Restrict)
  dayOfWeek  Int // 0-6 (Monday-Sunday)
  mealTime   String // breakfast, lunch, dinner, snack
  notes      String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@unique([mealPlanId, dayOfWeek, mealTime])
  @@map("meal-plan-entries")
}

model ChildMealPlan {
  id          String       @id @default(cuid())
  childId     String
  child       ChildDetails @relation(fields: [childId], references: [id], onDelete: Cascade)
  mealPlanId  String
  mealPlan    MealPlan     @relation(fields: [mealPlanId], references: [id], onDelete: Cascade)
  preferences String? // JSON array
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt

  @@unique([childId, mealPlanId])
  @@map("child-meal-plans")
}

model LocationData {
  id               String   @id @default(cuid())
  userId           String
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  suburbName       String
  state            String // NSW, VIC, QLD, WA, SA, TAS, NT, ACT
  medianHousePrice Float
  medianUnitPrice  Float
  rentalPriceHouse Float // Weekly rental price
  rentalPriceUnit  Float // Weekly rental price
  vacancyRate      Float // Percentage
  notes            String? // User notes about this suburb
  isFavorite       Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt

  @@unique([userId, suburbName, state])
  @@map("location-data")
}

model Headcount {
  id        String           @id @default(cuid())
  userId    String
  user      User             @relation(fields: [userId], references: [id], onDelete: Cascade)
  date      DateTime         @default(now()) // Date and time of headcount
  notes     String? // Optional notes about this headcount
  children  HeadcountChild[]
  createdAt DateTime         @default(now())
  updatedAt DateTime         @updatedAt

  @@map("headcounts")
}

model HeadcountChild {
  id          String       @id @default(cuid())
  headcountId String
  headcount   Headcount    @relation(fields: [headcountId], references: [id], onDelete: Cascade)
  childId     String
  child       ChildDetails @relation(fields: [childId], references: [id], onDelete: Cascade)
  createdAt   DateTime     @default(now())

  @@unique([headcountId, childId]) // Prevent duplicate children in same headcount
  @@map("headcount-children")
}
